= simple_form_for(@code) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :text, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full', :height => 400, :width => 900}}
    = f.input :code
    = f.input :attachment
    = f.input :link

  .form-actions
    = f.button :submit
